pipeline {
    agent any

    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main', credentialsId: 'Attendance-creds', url: 'https://github.com/OT-MICROSERVICES/attendance-api.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                // Install dependencies using pip
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage('Static code analysis') {
            steps {
                // Run pylint for static code analysis
                sh 'sudo - S /var/lib/jenkins/workspace/Python_Static_Declerative/ app.py'
                     

                // You need to specify the path to your Python files that you want to analyze with pylint
            }
        }
    }
    
    post {
        always {
            // Archive pylint reports
            archiveArtifacts artifacts: '**/pylint-report/*', allowEmptyArchive: true
        }
    }
}
