pipeline {
    agent any
    tools {
      maven 'mvn'
    }
    stages {
        stage('Checkout GIT') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/OT-MICROSERVICES/salary-api.git']])
            }
        }
        stage('Starting Code Compilation ') {
            steps {
                sh 'echo "Starting Java Code Compilation.........."'
                sh 'mvn clean compile'
            }
        }
    }
post { 
        success { 
            echo 'Compiled Successfully !'
            sh 'tree $WORKSPACE/target/'
        }
        failure { 
            echo 'Compilation Failed !'
        }
    }
}

